<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/recet-styles.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
    <link rel="stylesheet" href="/stylesheets/footer.css" />
    <script src="/javascripts/RequestManager.js"></script>
    <script>
      function onFileInput(event) {
        RequestManager.handleFileSelect(event, "#imgPreview");
      }
    </script>
  </head>
  <body>
    <div class="wrapper">
      <%- include('sections/header', {title: 'User form'})%>
      <main class="page">
        <% if (errors?.length > 0) { %>
        <ul>
          <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
        <hr />
        <% } %>
        <form
          action="/users/register<%= data?.id ? '/' + data.id : '' %>"
          method="post"
          enctype="multipart/form-data"
        >
          <input
            type="text"
            name="name"
            placeholder="Name"
            value="<%= data ? data.name : '' %>"
          />
          <input
            type="number"
            name="age"
            placeholder="age"
            value="<%= data ? data.age : '' %>"
          />
          <input
            type="email"
            name="email"
            placeholder="Email"
            value="<%= data ? data.email : '' %>"
          />
          <input
            type="password"
            name="password"
            placeholder="Password"
            value="<%= data ? data.password : '' %>"
          />
          <select name="type">
            <% types.forEach(type => { %>
            <option value="<%= type._id%>"><%= type.title%></option>
            <%})%>
          </select>
          <div class="prod-container">
            <label>
              Зображення товару <input type="file" name="userImg"
              accept="image/*" onchange="onFileInput(event)" <%= data ? '' :
              'required' %> />
            </label>
            <img
              id="imgPreview"
              src="/<%= data?.img ?? 'photo-not-available.jpg' %>"
              alt="Product Image Preview"
              class="prod-image"
            />
          </div>
          <button type="submit">Register</button>
        </form>
      </main>
      <%-include('sections/footer', {title: 'footer'})%>
    </div>
  </body>
</html>
